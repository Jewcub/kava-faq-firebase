{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "esModuleInterop": true,

    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true

  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}